@using Website_BanSach.Models.Entities;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GioHang</h2>
<div class="content">
    <div class="section group">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Mã Sách</td>

                    <td>Tên Sách</td>

                    <td>Ảnh Bìa</td>

                    <td>Số Lượng</td>

                    <td>Giá</td>

                    <td>Thành Tiền</td>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.iMaSach</td>

                        <td>@item.TenSach</td>

                        <td><img src="~/Content/image/@item.sHinhAnh" alt="Image" /></td>

                        <td>@item.iSoLuong</td>

                        <td>@item.iGia VNĐ</td>

                        <td>@item.iThanhTien VNĐ</td>
                    </tr>
                }
               
                </tbody>
            </table>
